<% unless user_signed_in? %>
  <div class="top-wrapper">
    <div class="container">
      <div class="top-message">
        <p class="title-message">あなたの欲しいを</p>
        <p class="title-message">創造しよう</p>
      </div>
    </div>
  </div>
<% end %>
<div class="about-wrapper">
  <div class="container">
  </div>
</div>
<div class="index-wrapper">
  <div class="container">
  <p class="section-title">Contents<p>
  <div class="header-middle">
    <%= form_with(url: search_ideas_path, local: true, method: :get, class: "search-form") do |form| %>
      <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" %>
      <%= form.submit "検索", class: "search-btn" %>
    <% end %>
  </div>
    <% @ideas.each do |idea| %>
      <%= render "idea", {idea: idea} %>
    <% end %>
  </div>

    <% if user_signed_in? %>
      <%= form_with(model: @idea, local: true, class:"idea-form") do |form| %>
        <%# <%= form.text_field :image, placeholder: "Image Url" %> 
        <%= form.text_area :content, placeholder: "アイディアはここに", class:"content-form"%>
        <%= form.submit "投稿する", class:"content-btn"%>
      <% end %>
    <% end %>
</div>